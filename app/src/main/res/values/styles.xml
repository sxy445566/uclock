<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:listDivider">@drawable/divider_background</item>
    </style>

    <style name="MainMenuTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/primary</item>
    </style>
    <!-- 设置activity透明 -->
    <style name="Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <!-- 底部出现落下动画 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <!--  长按弹出dialog-->
    <style name="ListOnLongClickDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 长按弹出dialog 按钮 -->
    <style name="DialogBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/selector_dialog_btn_background</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <!--  添加作息模版dialog-->
    <style name="WARTemplateInfoDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/window_background</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 星期按钮-->
    <style name="WeekButton" parent="ButtonStyle">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- 星期按钮边框-->
    <style name="WeekButtonCardView">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 确定取消按钮-->
    <style name="SureAndCancelButton"  parent="ButtonStyle">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- 作息模版星期字体-->
    <style name="WARTemplateWeekTextStyleFirst" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="WARTemplateWeekTextStyleNext" parent="ButtonStyle">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
